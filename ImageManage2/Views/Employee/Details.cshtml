@using Microsoft.EntityFrameworkCore
@model ImageManage2.Models.Employee

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "images.png");
}

<h1>Details</h1>



<div class="row justify-content-center m-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>@Model.Name</h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imagedetails"src="@photoPath" asp-append-version="true"/>
                
                <h4>Employee ID: @Model.Id</h4>
                <h4>Employee Email: @Model.Email</h4>
                <h4>Employee Dep:@Model.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="Index"class="btn btn-primary">List</a>
            </div>
        </div>
    </div>
</div>

