@model IEnumerable<ImageManage2.Models.Employee>

@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>




 
<div class="card-deck">
    @foreach (var item in Model)
    {
        
        var photoPath = "~/Images/" + (item.PhotoPath ?? "images.png");
        <div class="card m-3" style="min-width: 15rem; max-width: 26.5%;">

            <div class="card-header text-center">
                <h3>@item.Name</h3>
            </div>
            <img class="card-img-top imagethumbil" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View</a>
            </div>
        </div>


    }

</div>

    

